{
  "name": "x2notion-project-background-agent",
  "description": "Background Agent environment for X to Notion automation workflow project",
  "setup_commands": [
    "echo '🐦 X2Notion Background Agent Environment Setup'",
    "echo '=============================================='",
    "echo 'System Information:'",
    "uname -a",
    "echo ''",
    "echo '📦 Node.js & NPM Versions:'",
    "node --version",
    "npm --version",
    "echo ''",
    "echo '📁 Project Structure:'",
    "pwd",
    "tree -L 2 || ls -la",
    "echo ''",
    "echo '📄 Configuration Files:'",
    "echo '--- package.json ---'",
    "cat package.json 2>/dev/null || echo '⚠️  package.json not found - will create'",
    "echo ''",
    "echo '--- .env.example ---'",
    "cat .env.example 2>/dev/null || echo '⚠️  .env.example not found'",
    "echo ''",
    "echo '🔧 Installing Dependencies:'",
    "npm install --verbose || echo '⚠️  npm install failed - may need manual intervention'",
    "echo ''",
    "echo '📋 Dependency Verification:'",
    "npm list --depth=0 || echo '📦 Dependencies listed'",
    "echo ''",
    "echo '🔍 Project File Structure:'",
    "find . -name '*.json' -o -name '*.js' -o -name '*.py' -o -name '*.md' | head -20",
    "echo ''",
    "echo '✅ X2Notion Environment setup completed successfully'",
    "echo '🚀 Ready for n8n workflow development!'"
  ],
  "environment_variables": {
    "NODE_ENV": "development",
    "PROJECT_TYPE": "n8n-x2notion-automation",
    "PROJECT_NAME": "x2notion",
    "AGENT_MODE": "background",
    "LOG_LEVEL": "info",
    "WORKFLOW_TYPE": "x_to_notion_sync",
    "AI_INTEGRATION": "enabled",
    "PATH": "/usr/local/bin:/usr/bin:/bin:/usr/local/node/bin",
    "N8N_ENCRYPTION_KEY": "",
    "X_API_BEARER_TOKEN": "",
    "NOTION_API_KEY": "",
    "OPENAI_API_KEY": "",
    "SLACK_WEBHOOK_URL": "",
    "LINE_CHANNEL_ACCESS_TOKEN": ""
  },
  "required_tools": [
    "node",
    "npm",
    "git",
    "curl",
    "bash",
    "tree",
    "jq",
    "python3",
    "pip3"
  ],
  "development_dependencies": [
    "n8n",
    "@n8n/cli",
    "nodemon",
    "dotenv",
    "axios",
    "express",
    "cors"
  ],
  "scripts": {
    "install": "npm install",
    "start": "npm start",
    "dev": "npm run dev || n8n start",
    "build": "npm run build",
    "test": "npm test",
    "n8n": "n8n start",
    "n8n-dev": "n8n start --tunnel",
    "setup-env": "cp .env.example .env",
    "validate-config": "node scripts/validate-config.js || echo 'Config validation script not found'"
  },
  "project_structure": {
    "workflows": "n8n workflow JSON files",
    "scripts": "Python preprocessing scripts",
    "api": "Laravel API endpoints",
    "docs": "Project documentation"
  },
  "workflow_categories": [
    "x_fetch_to_notion",
    "ai_answer_flow", 
    "error_notify_flow",
    "data_preprocessing",
    "notification_system"
  ],
  "timeout": 600,
  "install": "npm install && pip3 install -r requirements.txt 2>/dev/null || echo 'Python requirements not found'",
  "start": "npm start",
  "health_checks": [
    "node --version",
    "npm --version", 
    "python3 --version",
    "git --version"
  ],
  "post_setup_tasks": [
    "echo '🔧 Post-setup tasks:'",
    "echo '1. Configure API keys in .env file'",
    "echo '2. Set up n8n workflows in /workflows directory'",
    "echo '3. Configure Notion database connections'",
    "echo '4. Test X API authentication'",
    "echo '5. Verify AI service integrations'",
    "echo ''",
    "echo '📚 Useful commands:'",
    "echo '  npm run n8n        - Start n8n interface'",
    "echo '  npm run n8n-dev    - Start n8n with tunnel'",
    "echo '  npm run setup-env  - Copy environment template'",
    "echo ''",
    "echo '🎯 Project is ready for X to Notion automation development!'"
  ]
}